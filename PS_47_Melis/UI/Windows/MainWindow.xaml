<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:local2="clr-namespace:UI.Components"
        mc:Ignorable="d"
        Title="List of all students" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <local2:StudentsList x:Name="studentsList" Padding="2"/>
            <Button Height="20" Width="50" Click="Button_Click">Logs</Button>
            <Button Height="20" Width="50" Click="Button_Click_1">Delete</Button>
            <Button Height="20" Width="50" Click="Button_Click_2">Add</Button>
            <Button Height="20" Width="50" Click="Button_Click_3">Refresh</Button>
        </StackPanel>
    </Grid>
</Window>