<Window x:Class="UI.Windows.RemoveUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="RemoveUserWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock>Name</TextBlock>
            <TextBox x:Name="tbN"></TextBox>
            <Button Content="Delete" x:Name="delete" Click="DeleteButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="50" Margin="100,0,0,0"/>

        </StackPanel>

    </Grid>
</Window>
